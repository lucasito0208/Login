<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.example.entregable3.RegistroActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Datos de Registro"
        android:textAlignment="center"
        android:textSize="30dp"/>


    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        android:hint="Email"
        android:layout_marginTop="50dp"
        android:inputType="textEmailAddress"
        />

    <EditText
        android:id="@+id/txtUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:counterMaxLength="15"
        app:errorEnabled="true"
        android:layout_marginTop="20dp"
        android:hint="Usuario"/>


    <EditText
        android:id="@+id/txtContra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        app:passwordToggleEnabled="true"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginTop="20dp"/>

    <AutoCompleteTextView
        android:id="@+id/txtAuto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:completionThreshold="1"
        android:hint="Grado"
        android:imeOptions="actionDone"
        android:layout_marginTop="20dp"/>

    <RadioGroup
        android:id="@+id/radios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:onClick="onClick">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horario: "
                android:layout_marginRight="10dp"
                android:textAlignment="center"
                android:textSize="20dp"/>

            <RadioButton
                android:id="@+id/rbMañanas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mañanas"
                android:textSize="20dp"
                android:onClick="onClick"
            />

            <RadioButton
                android:id="@+id/rbTardes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tardes"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:onClick="onClick"
            />

    </RadioGroup>

    <LinearLayout
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Switch
            android:id="@+id/sw"
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:onClick="onClick"
            android:text="Tipo de matrícula"
            android:textSize="20dp"
            tools:ignore="OnClick,UseSwitchCompatOrMaterialXml" />


        <TextView
            android:id="@+id/txtMatri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:onClick="confirmInput"
        android:text="Confirm"
        tools:ignore="OnClick" />

</LinearLayout>